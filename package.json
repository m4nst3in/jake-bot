{
  "name": "jake-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "test": "jest --passWithNoTests",
    "deploy:commands": "tsx src/scripts/deploy-commands.ts",
    "migrate:sqlite": "tsx src/db/sqlite/migrate.ts",
    "migrate:mongo": "tsx src/db/mongo/migrate.ts",
    "seed:bancas": "tsx src/scripts/seed-bancas.ts",
    "backup": "tsx src/scripts/backup.ts",
    "strip:comments": "tsx src/scripts/strip-comments.ts",
    "sync:staff": "tsx src/scripts/sync-staff.ts"
  },
  "dependencies": {
    "bullmq": "^5.58.5",
    "discord.js": "^14.22.1",
    "dotenv": "^16.6.1",
    "ioredis": "^5.7.0",
    "mongodb": "^6.19.0",
    "node-cron": "^3.0.3",
    "pdfkit": "^0.17.2",
    "pino": "^9.9.4",
    "pino-pretty": "^11.3.0",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.2",
    "typescript": "^5.9.2"
  }
}
