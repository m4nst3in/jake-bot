{
  "name": "jake-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
  "test": "jest --passWithNoTests",
  "deploy:commands": "tsx src/scripts/deploy-commands.ts",
    "migrate:sqlite": "tsx src/db/sqlite/migrate.ts",
    "migrate:mongo": "tsx src/db/mongo/migrate.ts",
  "seed:bancas": "tsx src/scripts/seed-bancas.ts",
  "backup": "tsx src/scripts/backup.ts",
  "strip:comments": "tsx src/scripts/strip-comments.ts"
  },
  "dependencies": {
    "bullmq": "^5.8.3",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "ioredis": "^5.4.2",
    "mongodb": "^6.8.0",
    "node-cron": "^3.0.3",
    "pino": "^9.0.0",
    "pino-pretty": "^11.2.2",
    "sqlite3": "^5.1.7",
  "uuid": "^9.0.1",
  "zod": "^3.23.8",
  "pdfkit": "^0.15.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
  "@types/uuid": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}
