{
  "name": "jake-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "test": "jest --passWithNoTests",
    "deploy:commands": "tsx src/scripts/deploy-commands.ts",
    "migrate:sqlite": "tsx src/db/sqlite/migrate.ts",
    "migrate:mongo": "tsx src/db/mongo/migrate.ts",
    "seed:bancas": "tsx src/scripts/seed-bancas.ts",
    "backup": "tsx src/scripts/backup.ts",
    "strip:comments": "tsx src/scripts/strip-comments.ts",
    "sync:staff": "tsx src/scripts/sync-staff.ts",
    "migrate:punishments": "tsx src/scripts/migrate-punishments.ts",
    "normalize:areas": "tsx src/scripts/normalize-areas.ts"
  },
  "dependencies": {
    "bullmq": "^5.58.5",
    "discord.js": "^14.22.1",
  "dotenv": "^17.2.2",
    "ioredis": "^5.7.0",
    "mongodb": "^6.19.0",
  "node-cron": "^4.2.1",
    "playwright": "^1.40.0",
    "pino": "^9.9.4",
    "pino-pretty": "^11.3.0",
    "sqlite3": "^5.1.7",
  "uuid": "^13.0.0",
  "zod": "^4.1.5"
  },
  "devDependencies": {
  "@types/jest": "^30.0.0",
    "@types/node": "^20.19.13",
    "@types/node-cron": "^3.0.11",
  "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
  "jest": "^30.1.3",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
